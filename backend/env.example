# =============================================================================
# ملف إعدادات البيئة - Zaytuna POS Backend
# =============================================================================
# تحذير: لا تستخدم هذه القيم في الإنتاج!
# انسخ هذا الملف إلى .env.local وعدل القيم حسب البيئة
# =============================================================================

# تطبيق
NODE_ENV=development
PORT=3000
APP_NAME=Zaytuna POS
API_PREFIX=api/v1

# قاعدة البيانات - غير هذه القيم لتتناسب مع إعدادات PostgreSQL الخاصة بك
DATABASE_URL=postgresql://zaytuna_user:password@localhost:5432/zaytuna_pos

# Redis - تأكد من تشغيل Redis على المنفذ 6379
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT - غير هذه المفاتيح في الإنتاج!
JWT_SECRET=dev_jwt_secret_key_change_in_production_min_32_chars
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# تشفير - غير هذا المفتاح في الإنتاج!
ENCRYPTION_KEY=dev_encryption_key_32_characters_long

# تخزين الملفات
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# إعدادات AWS S3 (اختياري)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# إشعارات - أضف مفاتيح API الحقيقية هنا
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# مراقبة - أضف DSN الحقيقي من Sentry
SENTRY_DSN=
